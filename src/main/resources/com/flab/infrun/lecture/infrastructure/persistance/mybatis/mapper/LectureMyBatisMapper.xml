<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
  namespace="com.flab.infrun.lecture.infrastructure.persistance.mybatis.mapper.LectureMyBatisMapper">

  <select id="findById" resultType="com.flab.infrun.lecture.domain.Lecture">
    SELECT ID , NAME, PRICE, INTRODUCE
    FROM LECTURE
    WHERE ID = #{id}
  </select>

  <insert id="save" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO LECTURE (NAME, PRICE, INTRODUCE)
    VALUES (#{name}, #{price}, #{introduce})
  </insert>

</mapper>
